<p id="notice"><%= notice %></p>

<h1>Meetings</h1>

<table>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <%= month_calendar do |date| %>
            <%= date %>
        <% end %>
        <% if false %>
        <%= week_calendar number_of_weeks: 2 do |date| %>
            <%= date %>
        <% end %>
        <% end %>
        <% if false %>
        <%= calendar number_of_days: 4 do |date| %>
            <%= date %>
        <% end %>
            <% end %>
        <td><%= meeting.name %></td>
        <td><%= meeting.start_time %></td>
        <td><%= meeting.end_time %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

