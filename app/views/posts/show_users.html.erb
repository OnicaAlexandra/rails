
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body style="background-color:red">
<div style="background-color: white; margin-left: 20px; margin-top: 100px">
<% @posts.each do |post| %>
         <h6> La evenimentul
           <strong><%= post. title %></strong> participa urmatorii utilizatori: </h6>
    <% @users.each do |user| %>
        <% if post.participating?(user)%>
           <h6>- <%= user.first_name %> <%= user.last_name %>, email:<%= user.email%></h6>
        <% end %>
    <% end %>
    <br>
<% end%>
</div>
</body>
